<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    card_view:cardCornerRadius="4dp"
    android:layout_margin="5dp"
    android:clickable="true"
    android:focusable="true"
    android:background="?android:attr/selectableItemBackground"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/imgKingdomImage"
            android:clickable="true"
            android:focusable="true"
            android:src="@mipmap/ic_launcher"/>

        <android.widget.TextView
            android:id="@+id/txtKingdomName"
            android:text="Kingdom Name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/imgKingdomImage"
            android:layout_toEndOf="@+id/imgKingdomImage"
            android:clickable="true"
            android:focusable="true"/>

        <android.widget.TextView
            android:id="@+id/txtKingdomId"
            android:text="Sample Data"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:clickable="true"
            android:layout_alignParentTop="true"
            android:layout_alignLeft="@+id/txtKingdomName"
            android:layout_alignStart="@+id/txtKingdomName"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:visibility="gone"/>

    </RelativeLayout>
</android.support.v7.widget.CardView>