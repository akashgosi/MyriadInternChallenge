<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/kingdom_first_info"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <android.widget.ImageView
            android:id="@+id/img_kingdom_image"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:paddingBottom="@dimen/img_padding"
            android:scaleType="centerCrop"
            android:clickable="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:tint="@color/image_tint" />

        <TextView
            android:id="@+id/txt_kingdom_name"
            android:padding="@dimen/text_padding"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:text="Kingdom Name"
            android:textColor="@color/image_text"
            android:textSize="@dimen/title_font"
            android:background="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:layout_alignBottom="@id/img_kingdom_image"
            android:gravity="bottom"/>



        <TextView
            android:id="@+id/txt_kingdom_climate_label"
            android:padding="@dimen/text_padding"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/kingdom_climate_label"
            android:textSize="@dimen/label_font"
            android:background="?android:attr/selectableItemBackground"
            android:layout_below="@id/img_kingdom_image"
            android:longClickable="true"

            android:layout_above="@+id/txt_population"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />


        <TextView
            android:id="@+id/txt_kingdom_population_label"
            android:padding="@dimen/text_padding"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/kingdom_population_label"
            android:textSize="@dimen/label_font"

            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/txt_climate"
            android:padding="@dimen/text_padding"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Climate"
            android:textSize="@dimen/text_font"

            android:layout_below="@id/img_kingdom_image"
            android:layout_toRightOf="@id/txt_kingdom_population_label"
            />
        <TextView
            android:id="@+id/txt_population"
            android:padding="@dimen/text_padding"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Population"
            android:textSize="@dimen/text_font"

            android:layout_below="@id/txt_climate"
            android:layout_toRightOf="@id/txt_kingdom_population_label"/>



    </RelativeLayout>
</ScrollView>